{
    "name": "vincent-p",
    "version": "1.0.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@gitlab.com:vincent-p/www-vincent-p-fr.git"
    },
    "contributors": [
        "Vincent PECQUERIE <contact@vincent-p.fr>"
    ],
    "watch": {
        "lint:ts": {
            "patterns": [
                "src"
            ],
            "extensions": "ts",
            "quiet": true
        },
        "lint:html": {
            "patterns": [
                "src"
            ],
            "extensions": "html",
            "quiet": true
        },
        "lint:css": {
            "patterns": [
                "src"
            ],
            "extensions": "css,scss",
            "quiet": true
        }
    },
    "scripts": {
        "ng": "./node_modules/.bin/ng",
        "start": "ng serve",
        "bundle-report": "webpack-bundle-analyzer dist/browser/stats.json",
        "build": "ng build",
        "build:stats": "ng build --prod --stats-json",
        "build:client": "ng build --prod -c $ANGULAR_CONFIGURATION",
        "build:server-bundle": "ng run vincent-p:server:$ANGULAR_CONFIGURATION",
        "build:client-and-server-bundles": "npm run build:client && npm run build:server-bundle",
        "build:prerender": "npm run build:client-and-server-bundles && npm run compile:server && npm run generate:prerender",
        "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
        "compile:server": "tsc -p server.tsconfig.json",
        "generate:prerender": "cd dist && node prerender",
        "serve:prerender": "cd dist/browser && http-server",
        "serve:ssr": "node dist/server",
        "serve:lint": "./node_modules/.bin/npm-watch",
        "serve:test": "ng test --browsers ChromeHeadless --reporters spec --watch true",
        "test": "ng test --browsers ChromeHeadless --reporters spec --watch false  --code-coverage",
        "lint": "npm run lint:ts && npm run lint:html && npm run lint:css && npm run lint:docker",
        "lint:ts": "ng lint vincent-p",
        "lint:html": "./node_modules/.bin/htmllint src/app/**/**/**/**/**/**/**/**/**/*.html",
        "lint:css": "./node_modules/.bin/stylelint src/app/**/**/**/**/**/**/**/**/**/*.scss",
        "lint:docker": "./node_modules/.bin/dockerfile_lint",
        "build:doc": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./dist/documentation --theme material",
        "serve:doc": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./dist/documentation --theme material -s -r 4201 -w"
    },
    "pre-commit": [],
    "private": true,
    "dependencies": {
        "@angular-devkit/build-angular": "0.11.4",
        "@angular/animations": "^7.1.2",
        "@angular/cdk": "^7.1.1",
        "@angular/common": "^7.1.2",
        "@angular/compiler": "^7.1.2",
        "@angular/core": "^7.1.2",
        "@angular/forms": "^7.1.2",
        "@angular/http": "^7.1.2",
        "@angular/material": "^7.1.1",
        "@angular/platform-browser": "^7.1.2",
        "@angular/platform-browser-dynamic": "^7.1.2",
        "@angular/platform-server": "^7.1.2",
        "@angular/pwa": "^0.11.2",
        "@angular/router": "^7.1.2",
        "@angular/service-worker": "^7.1.2",
        "@nguniversal/common": "^7.0.2",
        "@nguniversal/express-engine": "^7.0.2",
        "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
        "@nicky-lenaers/ngx-scroll-to": "^2.0.0",
        "@types/express": "^4.16.0",
        "@types/lodash": "^4.14.118",
        "bootstrap": "^4.1.3",
        "bootstrap-notify": "^3.1.3",
        "cerialize": "^0.1.18",
        "classlist.js": "^1.1.20150312",
        "compression": "^1.7.3",
        "core-js": "^2.6.0",
        "express": "^4.16.4",
        "express-minify-html": "^0.12.0",
        "font-awesome": "^4.7.0",
        "hammerjs": "^2.0.8",
        "jquery": "^3.3.1",
        "moment": "^2.22.2",
        "ngx-quill": "^4.6.9",
        "ngx-raven": "^1.0.5",
        "perfect-scrollbar": "^1.4.0",
        "popper.js": "^1.14.6",
        "purify-css": "^1.2.5",
        "purifycss-webpack": "^0.7.0",
        "quill": "^1.3.6",
        "quill-emoji": "^0.1.5",
        "quill-mention": "^2.0.9",
        "raven-js": "^3.27.0",
        "reflect-metadata": "^0.1.12",
        "tooltip.js": "^1.3.1",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular/cli": "7.1.4",
        "@angular/compiler-cli": "^7.1.2",
        "@angular/language-service": "^7.1.2",
        "@compodoc/compodoc": "^1.1.7",
        "@types/jasmine": "^3.3.0",
        "@types/jasminewd2": "^2.0.6",
        "@types/node": "^10.12.12",
        "codelyzer": "^4.5.0",
        "dockerfile_lint": "^0.3.3",
        "htmllint": "^0.7.2",
        "htmllint-cli": "0.0.7",
        "http-server": "^0.11.1",
        "jasmine-core": "^3.3.0",
        "jasmine-spec-reporter": "^4.2.1",
        "jasminewd2": "^2.2.0",
        "karma": "^3.1.3",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage-istanbul-reporter": "^2.0.4",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "karma-junit-reporter": "^1.2.0",
        "karma-spec-reporter": "0.0.32",
        "npm-watch": "^0.5.0",
        "pre-commit": "^1.2.2",
        "protractor": "^5.4.1",
        "rxjs": "^6.3.3",
        "stylelint": "^9.9.0",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-scss": "^3.4.1",
        "ts-loader": "^5.3.1",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typescript": ">=3.1.1 <3.2",
        "webdriver-manager": "^12.1.0",
        "webpack-bundle-analyzer": "^3.0.3"
    }
}
